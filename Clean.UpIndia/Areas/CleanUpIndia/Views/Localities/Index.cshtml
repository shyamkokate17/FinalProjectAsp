@model IEnumerable<Clean.UpIndia.Models.Locality>

@{
    ViewData["Title"] = "Index";
}

<h1>Our Country</h1>

<p>
    <a button class="btn btn-primary" asp-action="Create">Create New City for Event</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LocalityName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LocalityName)
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.LocalityId">Edit</a> |
                <a class="btn btn-danger" asp-action="Details" asp-route-id="@item.LocalityId">Details</a> |
                <a class="btn btn-secondary" asp-action="Delete" asp-route-id="@item.LocalityId">Delete</a>
            </td>
        </tr>
}
    </tbody>
    
</table>
